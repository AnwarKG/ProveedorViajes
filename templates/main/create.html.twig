{% extends "base.html.twig" %}

{% block body %}

	<div class="container">
		<div class="row">
			<h3 class="mt-5 mb-5">AÑADIR PROVEEDOR</h3>
			<div class="col-sm-6 offset-md-2">
				{{ form_start(form) }}
				<div class="form-group mb-3">
					<strong>{{ form_label(form.nombre ) }}</strong>
					{{ form_widget(form.nombre,{'attr':{'class':'form-control'}})}}					
				</div>
				<div class="form-group mb-3">
					<strong>{{ form_label(form.email) }}</strong>
					{{ form_widget(form.email,{'attr':{'class':'form-control'}})}}
				</div>
				<div class="form-group mb-3">
					<strong>{{ form_label(form.telefono) }}</strong>
					{{ form_widget(form.telefono,{'attr':{'class':'form-control'}})}}
				</div>
				<div class="form-group mb-3">
					<strong>{{ form_label(form.tipo) }}</strong>
					{{ form_widget(form.tipo,{'attr':{'class':'form-control'}})}}
				</div>
				<div class="form-group mb-2">
					<strong>{{ form_label(form.activo) }}</strong>
					{{ form_widget(form.activo,{'attr':{'class':'form-control'}})}}
				</div>
				<div class="form-group">
					<button class="btn btn-primary mt-3 text-white rounded-pill">
						<strong>Añadir</strong>
					</button>
					<a class="btn btn-danger mt-3 text-white rounded-pill" href="{{ path('main')}}">
						<strong>Cancelar</strong>
					</i>
				</a>
			</div>
			{{ form_end(form) }}
		</div>
		
	</div>
</div>

{% endblock %}
