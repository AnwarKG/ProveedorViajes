{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		{% for message in app.flashes('notice') %}

			<div class="alert alert-success mt-4 mb-b">
				{{message}}
			</div>
		{% endfor %}
		<h3 class="mt-5 mb-5">Lista de Proveedores</h3>
		<table class="table">
			<thead class="table-dark">
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Nombre</th>
					<th scope="col">Email</th>
					<th scope="col">Teléfono</th>
					<th scope="col">Tipo</th>
					<th scope="col">Activo</th>
					<!--<th scope="col">Fecha Creación</th>-->
				</tr>
			</thead>
			<tbody>
				{% for data in list %}
					<tr>
						<th scope="row">{{data.id}}</th>
						<td>{{data.nombre}}</td>
						<td>{{data.email}}</td>
						<td>{{data.telefono}}</td>
						<td>{{data.tipo}}</td>
						<td>{{data.activo}}</td>
						<td>
							<a class="btn btn-warning" href="{{ path('update', {'id': data.id} )}}">
								<i class="bi bi-pencil"></i>
							</a>
							<a class="btn btn-danger" href="{{ path('delete', {'id': data.id} )}}">
								<i class="bi bi-trash"></i>
							</a>

						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a class="btn btn-primary mt-2 text-white col-md-2"  href="{{ path('create')}}">
			Añadir Proveedor</i>
	    </a>
</div>{% endblock %}
